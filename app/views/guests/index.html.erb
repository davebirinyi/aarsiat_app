<section id="index">
  <h1 class="flex_center">GODZILLAMODE:ENGAGED</h1>
  <div class="flex_center">
    <%= image_tag("godzillamode.jpg", alt: "Godzilla Mode") %>
  </div>
  <p align="center">This data may also be downloaded as a <%= link_to("CSV file", "godzillamode.csv") %>. The last update was made <%= time_ago_in_words(@guests.order("updated_at").last.updated_at) %> ago. (It was <%= @guests.order("updated_at").last.name %>.)




  <div class="flex_center">
    <table>
      <tr>
        <th>Guest Name</th>
        <th>Email Address</th>
        <th>Saturday Adults</th>
        <th>Saturday Children</th>
        <th>Vegan</th>
        <th>Food Restrictions</th>
        <th>Friday Adults</th>
        <th>Friday Children</th>
        <th>Yoga 7am</th>
        <th>Yoga 9am</th>
        <th>Yoga 11am</th>
        <th>Song Request</th>
        <th>Last Updated</th>
      </tr>
      <% @guests.order("updated_at DESC").each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.email %></td>
        <td><%= guest.saturday_adults %></td>
        <td><%= guest.saturday_children %></td>
        <td><%= guest.vegan %></td>
        <td><%= guest.food_restrictions %></td>
        <td><%= guest.friday_adults %></td>
        <td><%= guest.friday_children %></td>
        <td><%= guest.yoga_early %></td>
        <td><%= guest.yoga_mid %></td>
        <td><%= guest.yoga_late %></td>
        <td><%= guest.song_requests %></td>
        <td><%= time_ago_in_words(guest.updated_at) %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <!-- <div class="flex_center">
    <%= image_tag("godzilla.jpg", alt: "Pretty in Pink") %>
  </div> -->
</section>