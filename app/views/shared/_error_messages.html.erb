<% if @guest.errors.any? %>
  <div id="error_explanation">
    <div class="emphasis">
      The form contains <%= pluralize(@guest.errors.count, "error") %>.
    </div>
    <ul>
    <% @guest.errors.full_messages.each do |msg| %>
      <li class="emphasis"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>